{
  "name": "Gachon Tools - 사이버캠퍼스 확장프로그램",
  "description": "가천대학교 사이버캠퍼스 확장프로그램",
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "popup",
    "default_popup": "src/pages/popup/index.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://cyber.gachon.ac.kr/*"],
      "exclude_matches": ["https://cyber.gachon.ac.kr/login.php*"],
      "js": ["src/pages/content/index.js"],
      "css": ["assets/css/Globals.chunk.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/js/*.js", "assets/css/*.css"],
      "matches": ["*://*/*"]
    }
  ],
  "options_page": "src/pages/options/index.html"
}
